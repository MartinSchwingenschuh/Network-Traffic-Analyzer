{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "${file}",
                "glbs.c",
                "elasticSearch.c",
                "tools/stringBuilder.c",
                "pcap.c",
                "tools/LinkedList.c",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-lcurl",
                "-ljson-c",
                "-lpthread"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}